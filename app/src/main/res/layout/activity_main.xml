<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ConstraintLayout: O layout raiz, usado para organizar os elementos na tela. -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinplayCEP"
        android:layout_width="3650dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- TextInputLayout: Um contÃªiner que envolve um EditText, usado para adicionar recursos de estilo a um campo de entrada de texto. -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PERGUNTA"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:padding="20dp"
        android:text="Consultar" />


    <ProgressBar
        android:id="@+id/progressBarCEP"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinplayYESORNO"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/simOuNao"
            android:textSize="20dp"
            android:textAlignment="center"
            android:inputType="number" />



    </com.google.android.material.textfield.TextInputLayout>


</RelativeLayout>